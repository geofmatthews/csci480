\newcommand{\myvec}[1]{
\pstThreeDDot[showpoints=true,drawCoor=true](#1)
\pstThreeDLine[arrows=->,linecolor=blue](0,0,0)(#1)
}


\newcommand{\myframe}[4]{
\pstThreeDLine[arrows=->](#1)(#2)
\pstThreeDLine[arrows=->](#1)(#3)
\pstThreeDLine[arrows=->](#1)(#4)
}

\psset{arrowscale=2}
\psset{Alpha=120}
\psset{nameY=$z$}
\psset{nameZ=$y$}
\psset{yMax=9}


\psset{xyzLight=-5 0 5}

\psset{yMax=4}

\psset{unit=2cm}
\begin{pspicture}[showgrid=false](-4.5,-1.25)(1.25,1.25)

\psline[linestyle=dotted](-4,-1)(1,1.5)
\psline[linecolor=blue,arrows=->](-4,-1)(-3.11,-.55)

\psdot[linecolor=blue,radius=0.1](-4,-1)
\uput[90](-4,-1){$p$}
\uput[90](-3.11,-.55){$v$}

\psdot[linecolor=blue,radius=0.1](0,0)
\pscircle(0,0){1}
\uput[0](0,0){$c$}

\pcline[offset=0.3]{|<->|}(1,1)(1,0)
\ncput*[nrot=:U]{$r$}

\psdot[linecolor=blue,radius=0.1](-.8,.6)
\psdot[linecolor=blue,radius=0.1](0,1)

\end{pspicture}
