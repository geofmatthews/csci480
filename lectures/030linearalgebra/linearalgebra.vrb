\frametitle{Cross product (vector product)} 
\grph{crossprod}
\txt{
\item A vector at right angles to $u$ and $v$.
\item $u \times v = $\\
$(u_2v_3 - u_3v_2,$\\$ u_3v_1 - u_1v_3,$\\$ u_1v_2 - u_2v_1)$

\item Mnemonic:
\[u\times v = \left|\begin{array}{ccc}
 \vec{i} & \vec{j} & \vec{k} \\
                           u_1 & u_2 & u_3 \\
                           v_1 & v_2 & v_3 \\
\end{array}\right|\]
\item $|u\times v| = |u||v|\sin(\theta)$
}
